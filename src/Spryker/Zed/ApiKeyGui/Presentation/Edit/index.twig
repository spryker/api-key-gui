{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit API Key' | trans %}

{% block head_title widget_title | trans %}
{% block section_title widget_title | trans %}

{% block action %}
    {{ backActionButton(url('/api-key-gui/list'), 'Back to API Keys' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
            {{ form_widget(form) }}

                <button type="submit" class="btn btn-create safe-submit">{{ 'Save' | trans }}</button>

            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="{{ assetsPath('js/spryker-zed-api-key-gui-main.js') }}"></script>
{% endblock %}
