{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Create API Key' | trans %}

{% block head_title widget_title | trans %}
{% block section_title widget_title | trans %}

{% block action %}
    {{ backActionButton(url('/api-key-gui/list'), 'Back to API Keys' | trans) }}
{% endblock %}

{% block content %}

    <div class="alert alert-warning">
        <i class="alert__icon fa fas fa-exclamation-triangle" aria-hidden="true"></i>
        <div class="alert__text">
            {{ 'We highly recommend setting an expiration date to the token, because of security reasons.' | trans }}
        </div>
    </div>

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
            {{ form_widget(form) }}

                <button type="submit" class="btn btn-create safe-submit">{{ 'Create' | trans }}</button>

            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="{{ assetsPath('js/spryker-zed-api-key-gui-main.js') }}"></script>
{% endblock %}
